<div class="item">
<article class="testimonial-v1">      
   <div class="testimonial-content row">
      <div class="content col-md-12 col-sm-12 col-xs-12">
         <div class="content-inner">
            <div class="quote">
               {{ fields.body.content|striptags }}
            </div>  
            <div class="info">
               <div class="avatar left"> 
                  {{ fields.field_testimonial_avatar.content }}
               </div> 
               <div class="right">
                  <div class="title"> 
                     {{ fields.field_testimonial_name.content }}
                  </div>  
                  <div class="job"> 
                     {{ fields.field_testimonial_job.content }}
                  </div>
               </div>   
            </div>   
         </div>    
      </div>
   </div>
</article>
</div>